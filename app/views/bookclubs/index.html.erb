<div class="container align-items-center">
  <div>
    <%= link_to "â†", :back, class: "btn btn-outline-dark rounded-pill px-4 position-absolute", style: "color: #751F1F; border-color: #751F1F; top: 20px; left: 20px;" %>
  </div>
  <h1 class="text-center mb-4">My Bookclub</h1>
</div>
<div class="container">
  <div class="row mx-1">
    <% @bookclubs.each do |bookclub| %>
      <%= link_to book_bookclub_path(bookclub.book, bookclub), class: "text-decoration-none" do %>
        <div class="col-12 d-flex mb-3 align-items-center">
        <%= cl_image_tag bookclub.book.cover.key, class: "rounded-3", style="width: 50px; height: 70px; object-fit: cover; margin-right: 12px;", alt: book.title if book.cover.attached? %>
          <div>
            <h5 style="font-size: 12px; margin-bottom: 4px; color: #751F1F;" class="fw-medium text-muted"><%= bookclub.book.title %></h5>
            <p style="font-size: 16px; margin-bottom: 4px; color: #751F1F;" class="fw-medium"><%= bookclub.name %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
