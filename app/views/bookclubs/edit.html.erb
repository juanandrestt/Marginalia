<div class="container">
<h6 class="text-center" style="color:rgb(0, 0, 0);">Modify a bookclub for</h6>
<%= form_with model: [@bookclub.book, @bookclub], local: true do |form| %>
  <div class="mb-3">
    <%= form.label :name, "Nom du Bookclub", class: "form-label" %>
    <%= form.text_field :name, class: "form-control", value: @bookclub.name %>
  </div>

  <div class="mb-3">
    <%= form.label :description, "Description", class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <%= form.submit "Update", class: "btn btn-primary" %>
<% end %>
</div>
