<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="text-center mb-4" style="color: #751F1F;">Edit Profile</h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :username,
                          required: true,
                          placeholder: "Choose a username",
                          input_html: { class: "rounded-pill" } %>

              <%= f.input :email,
                          required: true,
                          input_html: { class: "rounded-pill" } %>

              <%= f.input :avatar,
                          required: false,
                          placeholder: "Paste your avatar URL",
                          input_html: { class: "rounded-pill" } %>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>

              <%= f.input :password,
                          hint: "leave it blank if you don't want to change it",
                          required: false,
                          input_html: { class: "rounded-pill" } %>
              <%= f.input :password_confirmation,
                          required: false,
                          input_html: { class: "rounded-pill" } %>
              <%= f.input :current_password,
                          hint: "we need your current password to confirm your changes",
                          required: true,
                          input_html: { class: "rounded-pill" } %>
            </div>

            <div class="form-actions text-center">
              <%= f.button :submit, "Update", class: "btn btn-primary rounded-pill w-100" %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="text-center">
            <h3 class="h5 mb-3" style="color: #751F1F;">Cancel my account</h3>
            <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name),
                data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
                method: :delete,
                class: "btn btn-outline-danger rounded-pill" %></p>
          </div>

          <%= link_to "Back", :back, class: "btn btn-link d-block text-center" %>
        </div>
      </div>
    </div>
  </div>
</div>
