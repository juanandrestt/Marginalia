<!-- Title -->
<div class="container mt-3">
  <div class="d-flex align-items-center mb-4 position-relative">
    <%= link_to root_path, class: "btn rounded-pill bg-white position-absolute", style: "color: #751F1F; left: 0;" do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>
    <h3 class="text-center mb-0 w-100" style="color: #0C0C0C;">Create a New List</h3>
  </div>
</div>
<div class="container">
  <h3 class="text-center mb-4" style="color: #751F1F;"><%= @book.title %></h3>
  <%= simple_form_for(@list) do |f| %>
    <%= f.error_notification %>
    <%= f.hidden_field :book_id, value: @book.id if params[:book_id] %>
    <div class="mb-3">
      <%= f.label :name, class: "text-center mb-2 d-block", style: "color: #751F1F;" do %>
        <h5>Name of the list</h5>
      <% end %>
      <%= f.text_field :name, class: "form-control d-flex align-items-center bg-white rounded-4 opacity-80 px-3 shadow-sm py-3 w-100 border-0" %>
    </div>
    <%= f.button :submit, class: "btn rounded-4 py-2 w-100 mb-2", style: "color: #fff; background-color: #751F1F;" do %>
      <h5>Create</h5>
    <% end %>
  <% end %>
</div>
