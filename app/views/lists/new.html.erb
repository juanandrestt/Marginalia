<h1 class="text-center mb-4">Create a New List</h1>

<div class="container">
  <%= simple_form_for(@list) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs mb-3">
      <%= f.input :name, label: " Name", class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Create List", class: "btn btn-primary" %>
    </div>
  <% end %>
  <div class="mt-3">
    <%= link_to "Back to Lists", lists_path, class: "btn btn-secondary" %>
  </div>
</div>
