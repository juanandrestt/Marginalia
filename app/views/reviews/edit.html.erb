<h2>Edit your review for <%= @review.book.title %></h2>

<%= form_for [@review.book, @review] do |f| %>
  <div class="form-group">
    <%= f.label :content, "Review content" %>
    <%= f.text_area :content, rows: 5, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :rating, "Rating" %>
    <%= f.select :rating, options_for_select([1, 2, 3, 4, 5], @review.rating), {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :emotion, "How did you feel?" %>
    <%= f.select :emotion, ["Happy", "Sad"], {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :favorite_characters, "What characters did you prefer?" %>
    <%= f.text_field :favorite_characters, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Update review", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back to book', book_path(@review.book), class: 'btn btn-secondary' %>
