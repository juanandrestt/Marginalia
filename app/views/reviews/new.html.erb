                  data-action="click->review-form#selectCharacter"
                  data-character="<%= char %>"
                  data-id="<%= char.parameterize %>"
                  id="char-btn-<%= char.parameterize %>">
            <%= char %>
          </button>
        <% end %>
      </div>
      <%= form.hidden_field :favorite_characters, id: "character-input", data: { review_form_target: "characterInput" } %>
    </div>
