
  <!-- Title -->
<div class="container d-flex justify-content-between align-items-center mt-3">
  <div class="d-flex">
    <div class="d-flex align-items-center">
      <%= link_to :back, class: "btn rounded-pill bg-white", style: "color: #751F1F; left: 0;" do %>
        <i class="fa-solid fa-arrow-left"></i>
      <% end %>
    </div>
    <div class="d-flex align-items-center">
      <%= link_to :back, class: "btn rounded-pill bg-white", style: "color: #751F1F; left: 0;" do %>
      <% end %>
    </div>
  </div>
  <h3 class="text-center mb-0" style="color: #0C0C0C;">Book</h3>
  <div class="d-flex justify-content-center gap-2">
    <!-- CTA bookclub -->
    <div>
      <%= link_to new_book_bookclub_path(@book), class: "btn btn-outline-dark rounded-pill", style: "color: #751F1F; border-color: #751F1F;" do %>
        <i class="fa-regular fa-bookmark"></i>
      <% end %>
    </div>
    <!-- CTA list -->
    <div>
      <%= link_to new_book_bookclub_path(@book), class: "btn btn-outline-dark rounded-pill", style: "color: #751F1F; border-color: #751F1F;" do %>
        <i class="fa-solid fa-list text-12"></i>
      <% end %>
    </div>
  </div>
</div>
<!-- Book -->
<div class="container mt-4 mb-4">
  <div style="background-image: url('/assets/vector2.png'); background-size: contain; background-repeat: no-repeat; width: 100%; height: 350px; position: absolute; top: 0; left: 0; z-index: -1;"></div>
  <div style="background-image: url('/assets/book_mockup.png'); background-size: contain; background-repeat: no-repeat; max-height: 209px; position: absolute; top: 0; left: 0; z-index: -1000;"></div>
  <!-- Book Cover -->
  <div class="text-center mb-4">
    <img src="<%= @book.cover_url %>" alt="<%= @book.title %>" class="img-fluid shadow rounded-3" style="max-height: 209px; object-fit: cover;">
  </div>
  <!-- Title & Author -->
  <div class="text-center mb-3">
    <h2 class="fw-bold" style="color: #751F1F;">
      <%= @book.title %>
    </h2>
    <p class="text-muted" style="margin-top: -0.5rem;"><%= @book.author %></p>
  </div>
  <!-- Add a review -->
  <div>
    <% if user_signed_in? && !@current_user_review %>
      <%= link_to new_book_review_path(@book), class: "btn btn-outline-dark rounded-pill", style: "color: #751F1F; border-color: #751F1F;" do %>
        <i class="fas fa-plus"></i> Add a review
      <% end %>
    <% end %>
  </div>
  <!-- KPI -->
  <div class="d-flex justify-content-center align-items-center gap-2">
    <div class="text-center">
      <p>Rating</p>
      <p>5.0</p>
    </div>
    <div style="width: 20px; height: 100%; background-color: #D5D5D5;"></div>
    <div class="text-center">
      <p>Chapters</p>
      <p>20</p>
    </div>
    <div style="width: 20px; height: 100%; background-color: #D5D5D5;"></div>
    <div class="text-center">
      <p>Pages</p>
      <p>300</p>
    </div>
  </div>
  <!-- Description bloc styled -->
  <div class="mb-4 px-2">
    <h4 class="mb-3" style="color: #751F1F;">Resume</h4>
    <div class=" gap-2">
      <p class="btn bg-white py-1 px-2 opacity-80 shadow-sm rounded-4" style="font-size: 12px;">
        <%= @book.publishing_year %>
      </p>
      <% if @book.subjects.present? %>
        <% @book.subjects.split(',')[1..2]&.each do |tag| %>
          <p class="btn bg-white py-1 px-2 opacity-80 shadow-sm rounded-4" style="font-size: 12px;">
            <%= tag.strip %>
          </p>
        <% end %>
      <% end %>
    </div>
    <p class="mb-2" style="font-family: Poppins;"><%= @book.description %></p>
    <div>
      <% if @book.characters.present? %>
        <div class="mt-2 text-muted" style="font-size: 13px;">
          <strong>Characters:</strong> <%= @book.characters %>
        </div>
      <% end %>
    </div>
    <!-- Read Bookmark List -->
    <div class="d-flex gap-2 align-items-center justify-content-between">
      <!-- Read -->
      <div class="d-flex gap-2 align-items-center">
        <% if @book.readings.exists?(user: current_user) %>
          <i class="fa-solid fa-check btn rounded-pill bg-white" style="color: #751F1F;"></i>
        <% end %>
        <p>Read</p>
      </div>
    </div>
    <!-- Reviews -->
    <div class="" style="margin-bottom: 104px;">
      <%= render 'reviews/current_user_review', current_user_review: @current_user_review, book: @book %>
      <% @reviews.each do |review| %>
        <%= render 'reviews/review_card', review: review %>
      <% end %>
    </div>
  </div>
  <div class="tab-bar d-flex justify-content-around align-items-center bg-light px-3 shadow-sm position-fixed w-100 start-50 translate-middle-x" style="bottom: 16px; height: 56px; z-index: 999;">
    <div>
      <% if user_signed_in? && !@current_user_review %>
        <%= link_to new_book_review_path(@book), class: "btn btn-outline-dark", style: "color: #070740; border: none;" do %>
          Add a review
        <% end %>
      <% end %>
    </div>
    <div>
      <% if user_signed_in? && !@current_user_review %>
        <%= link_to new_book_review_path(@book), class: "btn btn-outline-dark", style: "color: #751F1F; border-color: #751F1F;" do %>
          Mark as read
        <% end %>
      <% end %>
    </div>
