<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h1 class="card-title mb-4"><%= @book.title %></h1>
          <div class="book-details mb-4">
            <p><strong><i class="fas fa-user"></i> Author:</strong> <%= @book.author %></p>
            <p><strong><i class="fas fa-book-open"></i> Description:</strong> <%= @book.description %></p>
          </div>
        </div>
      </div>

      <div class="card shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
          <h2 class="mb-0">Reviews</h2>
          <% if user_signed_in? && !@current_user_review %>
            <%= link_to new_book_review_path(@book), class: "btn btn-primary btn-sm" do %>
              <i class="fas fa-plus"></i> Add a review
            <% end %>
          <% end %>
        </div>
        <div class="card-body">
          <% if user_signed_in? %>
            <% if @current_user_review %>
              <div class="review-card mb-4 p-3 border rounded">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <h5 class="mb-0">Your Review</h5>
                  <div class="review-actions">
                    <%= link_to edit_book_review_path(@book, @current_user_review), class: 'btn btn-sm btn-outline-primary me-2' do %>
                      <i class="fas fa-edit"></i> Edit
                    <% end %>
                    <%= form_for @current_user_review, url: book_review_path(@book, @current_user_review), method: :delete, class: 'd-inline' do |f| %>
                      <%= f.button type: 'submit', class: 'btn btn-sm btn-outline-danger', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
                        <i class="fas fa-trash"></i> Delete
                      <% end %>
                    <% end %>
                  </div>
                </div>
                <div class="review-content">
                  <p><strong><i class="fas fa-star"></i> Rating:</strong> <%= @current_user_review.rating %>/5</p>
                  <p><strong><i class="fas fa-comment"></i> Content:</strong> <%= @current_user_review.content %></p>
                  <p><strong><i class="fas fa-heart"></i> Emotion:</strong> <%= @current_user_review.emotion %></p>
                  <p><strong><i class="fas fa-users"></i> Favorite Characters:</strong> <%= @current_user_review.favorite_characters %></p>
                </div>
              </div>
            <% end %>
          <% end %>

          <div class="other-reviews">
            <% if @reviews.any? %>
              <% @reviews.each do |review| %>
                <div class="review-card mb-3 p-3 border rounded">
                  <div class="review-content">
                    <p><strong><i class="fas fa-star"></i> Rating:</strong> <%= review.rating %>/5</p>
                    <p><strong><i class="fas fa-comment"></i> Content:</strong> <%= review.content %></p>
                    <p><strong><i class="fas fa-heart"></i> Emotion:</strong> <%= review.emotion %></p>
                    <p><strong><i class="fas fa-users"></i> Favorite Characters:</strong> <%= review.favorite_characters %></p>
                  </div>
                </div>
              <% end %>
            <% else %>
              <p class="text-muted text-center">No reviews yet</p>
            <% end %>
          </div>

          <% if !user_signed_in? %>
            <div class="alert alert-info text-center mt-4">
              <%= link_to "Sign in", new_user_session_path, class: "alert-link" %> to add a review
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
