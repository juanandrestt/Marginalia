<div class="container mt-4 w-50 d-flex flex-column vh-100">
  <div class="chat-container flex-grow-1 overflow-y-auto mb-3" style="max-height: calc(100vh - 200px);">
    <% @messages.each do |message| %>
      <div class="d-flex <%= message.role == 'user' ? 'justify-content-end' : 'justify-content-start' %> mb-3">
        <div class="<%= message.role == 'user' ? 'bg-info' : '' %> rounded p-3" style="max-width: 70%;">
          <%= simple_format message.content %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="message-form sticky-bottom">
    <%= simple_form_for @message do |f| %>
      <div class="d-flex gap-2">
        <%= f.input :content, 
                    placeholder: "Ask a question", 
                    required: true, 
                    label: false,
                    wrapper: false,
                    input_html: { class: 'form-control' } %>
        <%= f.button :submit, 'Ask for a recommendation', class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>