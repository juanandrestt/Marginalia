<% like = current_user.likes.find_by(review: review) %>
<div id="review-<%= review.id %>-likes">
  <% if like %>
    <%= button_to like_path(like),
                  method: :delete,
                  class: "btn p-0 d-flex align-items-center gap-2",
                  style: "border: none;",
                  form: { data: { turbo: true } } do %>
      <i class="fa-solid fa-heart" style="color: #751F1F;"></i>
      <span><%= review.likes_count || 0 %></span>
    <% end %>
  <% else %>
    <%= button_to review_likes_path(review_id: review.id),
                  method: :post,
                  class: "btn p-0 d-flex align-items-center gap-2",
                  style: "border: none;",
                  form: { data: { turbo: true } } do %>
      <i class="fa-regular fa-heart" style="color: #751F1F;"></i>
      <span><%= review.likes_count || 0 %></span>
    <% end %>
  <% end %>
</div>
