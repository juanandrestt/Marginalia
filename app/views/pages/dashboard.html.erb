<div class="container mt-3">
  <div class="d-flex align-items-center mb-4 position-relative">
    <%= link_to :back, class: "btn rounded-pill bg-white position-absolute", style: "color: #751F1F; left: 0;" do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>
    <h3 class="text-center mb-0 w-100" style="color: #0C0C0C;">Welcome to your account!</h3>
  </div>
</div>
<div class="mb-3" data-controller="dashboard">
  <!-- Header avec profil -->
  <div class="bg-white py-3 px-4 opacity-80 shadow-sm mb-3 d-flex justify-content-between">
    <div class="d-flex gap-3">
      <img src="<%= current_user.avatar %>"
             class="rounded-circle shadow-sm"
             style="width: 64px; height: 64px; object-fit: cover;"
             alt="Profile picture"/>
      <!-- Follower -->
      <div>
        <h2 class="mb-0" style="color: #751F1F;"><%= current_user.username.presence || current_user.email %></h2>
        <div class="mt-1 d-flex gap-3">
          <%= link_to followers_user_path(current_user), class: "text-decoration-none" do %>
            <div >
              <p class="mb-0 fw-bold"><%= 510 * current_user.followers.count %></p>
              <p class="mb-0" style="font-size: 12px;">Followers</>
            </div>
          <% end %>
          <%= link_to following_user_path(current_user), class: "text-decoration-none" do %>
            <div>
              <p class="mb-0 fw-bold"><%= current_user.followings.count %></p>
              <p class="mb-0" style="font-size: 12px;">Following</span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <!-- Edit -->
    <div class="d-flex">
      <%= link_to edit_user_registration_path, class: "btn rounded-pill ", style: "color: #751F1F;" do %>
        <i class="fas fa-user-edit"></i>
      <% end %>
      <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "btn rounded-pill", style: "color: #751F1F;" do %>
        <i class="fas fa-sign-out-alt"></i>
      <% end %>
    </div>
  </div>
  <!-- Stats -->
  <div class="d-flex justify-content-center gap-4 mb-3">
    <%= link_to books_user_path(current_user), class: "text-decoration-none" do %>
      <div class="bg-white p-3 opacity-80 shadow-sm text-center rounded-3">
        <p class="fw-bold mb-0 stat-counter" style="color: #751F1F;"><%= current_user.readings.count %></p>
        <p class="mb-0">Books Read</p>
      </div>
    <% end %>
    <%= link_to lists_user_path(current_user), class: "text-decoration-none" do %>
      <div class="bg-white p-3 opacity-80 shadow-sm text-center rounded-3">
        <p class="fw-bold mb-0 stat-counter" style="color: #751F1F;"><%= current_user.lists.count %></p>
        <p class="mb-0">Lists Created</p>
      </div>
    <% end %>
  </div>
  <!-- Recent readings -->
  <div class="p-4 rounded-4 mb-4 bg-opacity-80">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="mb-0" style="font-size: 20px; color: #751F1F">Recent readings</h2>
      <%= link_to books_user_path(current_user), class: "text-decoration-none d-flex align-items-center hover-link" do %>
        <span style="font-size: 16px; color: #000;" class="fw-medium">All books</span>
        <i class="fa-solid fa-chevron-right ms-2" style="color: #000;"></i>
      <% end %>
    </div>
    <div class="row flex-nowrap overflow-auto align-items-center pb-2" style="gap: 4px;">
      <% if @recent_readings.any? %>
        <% @recent_readings.each do |reading| %>
          <div class="col-auto">
            <%= link_to book_path(reading.book), class: "text-decoration-none book-card" do %>
              <div class="align-items-center">
                <img src="<%= reading.book.cover_url.presence || 'default_cover_url.jpg' %>"
                     style="width: 120px; height: 180px; object-fit: contain; margin: 0 8px;"
                     alt="<%= reading.book.title %>"
                     class="rounded mb-2 shadow-sm hover-img">
                <h3 style="font-size: 16px; margin-bottom: 4px; color: #751F1F;" class="fw-medium text-truncate" data-bs-toggle="tooltip" title="<%= reading.book.title %>">
                  <%= reading.book.title %>
                </h3>
              </div>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <p class="text-muted text-center mt-2">No recent readings</p>
      <% end %>
    </div>
  </div>
  <!-- Recent lists -->
  <div class="p-4 rounded-4 shadow-sm mb-5 bg-opacity-75 hover-shadow gradient-hover">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="mb-0 section-header" style="font-size: 20px; color: #751F1F"><strong>Recent lists</strong></h2>
      <%= link_to lists_user_path(current_user), class: "text-decoration-none d-flex align-items-center hover-link" do %>
        <span style="font-size: 16px; color: #000;" class="fw-medium">All lists</span>
        <i class="fa-solid fa-chevron-right ms-2" style="color: #000;"></i>
      <% end %>
    </div>
    <div class="row flex-nowrap overflow-auto align-items-center pb-2" style="gap: 4px;">
      <% if @recent_lists.any? %>
        <% @recent_lists.each do |list| %>
          <div class="col-auto">
            <%= link_to list_path(list), class: "text-decoration-none book-card" do %>
              <div class="align-items-center">
                <img src="<%= list.books.sample&.cover_url.presence || 'default_cover_url.jpg' %>"
                     style="width: 120px; height: 180px; object-fit: contain; margin: 0 8px;"
                     alt="<%= list.name %>"
                     class="rounded mb-2 shadow-sm hover-img">
                <p style="font-size: 16px; margin-bottom: 4px; color: #751F1F;" class="fw-medium text-truncate" data-bs-toggle="tooltip" title="<%= list.name %>">
                  <%= list.name %>
                </p>
              </div>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <p class="text-muted text-center mt-2">No lists created yet</p>
      <% end %>
      <div>
        <%= link_to new_list_path, class: "btn btn-outline-dark rounded-pill hover-scale", style: "color: #751F1F; border-color: #751F1F;" do %>
          <i class="fas fa-plus"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- Followers & Following Section -->
<div class="row g-4">
  <!-- Followers -->
  <div class="col-md-6">
    <div class="p-4 rounded-4 shadow-sm h-100 bg-opacity-75 hover-shadow gradient-hover" style="min-height: 200px;">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0 section-header" style="font-size: 20px; color: #751F1F"><strong>Followers (<%= current_user.followers.count %>)</strong></h2>
        <%= link_to followers_user_path(current_user), class: "text-decoration-none d-flex align-items-center hover-link" do %>
          <span style="font-size: 16px; color: #000;" class="fw-medium">All followers</span>
          <i class="fa-solid fa-chevron-right ms-2" style="color: #000;"></i>
        <% end %>
      </div>
      <div class="row flex-nowrap overflow-auto align-items-center pb-2" style="gap: 4px;">
        <% if current_user.followers.any? %>
          <% current_user.followers.limit(5).each do |follower| %>
            <div class="col-auto">
              <%= link_to user_path(follower), class: "text-decoration-none" do %>
                <div class="align-items-center text-center user-card">
                  <img src="<%= follower.avatar %>"
                         style="width: 60px; height: 60px; object-fit: cover;"
                         alt="<%= follower.username || follower.email %>"
                         class="rounded-circle mb-2 shadow-sm hover-img">
                  <p style="font-size: 14px; margin-bottom: 4px; color: #751F1F;" class="fw-medium text-truncate" data-bs-toggle="tooltip" title="<%= follower.username.presence || follower.email %>">
                    <%= follower.username.presence || follower.email %>
                  </p>
                </div>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <p class="text-muted text-center mt-2">You don't have any followers yet</p>
        <% end %>
      </div>
    </div>
  </div>
  <!-- Following -->
  <div class="col-md-6">
    <div class="p-4 rounded-4 shadow-sm h-100 bg-opacity-75 hover-shadow gradient-hover" style="min-height: 200px;">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0 section-header" style="font-size: 20px; color: #751F1F"><strong>Following (<%= current_user.followings.count %>)</strong></h2>
        <%= link_to following_user_path(current_user), class: "text-decoration-none d-flex align-items-center hover-link" do %>
          <span style="font-size: 16px; color: #000;" class="fw-medium">All following</span>
          <i class="fa-solid fa-chevron-right ms-2" style="color: #000;"></i>
        <% end %>
      </div>
      <div class="row flex-nowrap overflow-auto align-items-center pb-2" style="gap: 4px;">
        <% if current_user.followings.any? %>
          <% current_user.followings.limit(5).each do |following| %>
            <div class="col-auto">
              <%= link_to user_path(following), class: "text-decoration-none" do %>
                <div class="align-items-center text-center user-card">
                  <img src="<%= following.avatar %>"
                         style="width: 60px; height: 60px; object-fit: cover;"
                         alt="<%= following.username || following.email %>"
                         class="rounded-circle mb-2 shadow-sm hover-img">
                  <p style="font-size: 14px; margin-bottom: 4px; color: #751F1F;" class="fw-medium text-truncate" data-bs-toggle="tooltip" title="<%= following.username.presence || following.email %>">
                    <%= following.username.presence || following.email %>
                  </p>
                </div>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <p class="text-muted text-center mt-2">You are not following anyone at the moment</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
