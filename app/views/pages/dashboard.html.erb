  <h1>Welcome to Your Dashboard</h1>

  <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-secondary" %>

  <h2>Your Recent Lists</h2>
  <div class="container">
    <div class="row">
      <% @recent_lists.each do |list| %>
      <div class="col-12 col-sm-6 col-md-4 mb-3">
        <%= link_to list_path(list), class:"text-decoration-none" do %>
          <div style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.books.sample.cover_url %>)">
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
    </div>
  </div>

  <%= link_to "Create a new list", new_list_path, class: "btn btn-secondary" %>
  <%= link_to "View All Lists", lists_path, class: "btn btn-secondary" %>