<div class="container mt-3">
  <div class="d-flex align-items-center mb-4 position-relative">
    <%= link_to :back, class: "btn rounded-pill bg-white position-absolute", style: "color: #751F1F; left: 0;" do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>
    <h3 class="text-center mb-0 w-100" style="color: #0C0C0C;">All your lists</h3>
  </div>
</div>
<div class="container">
  <h1 class="mb-4">All your Bookclub</h1>
  <div class="container">
    <div class="row mx-1">
      <% current_user.bookclubs.each do |bookclub| %>
        <%= link_to bookclub_path(bookclub), class: "text-decoration-none" do %>
          <div class="col-16 d-flex mb-3 align-items-center">
            <img src="<%= bookclub.book.cover_url.presence || 'default_cover_url.jpg' %>"
                 style="width: 50px; height: 70px; object-fit: cover; margin-right: 12px;"
                 alt="<%= bookclub.name %>">
            <div>
              <h5 style="font-size: 16px; margin-bottom: 4px; color: #751F1F;" class="fw-medium playfair-display">
                <%= bookclub.name %>
              </h5>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
